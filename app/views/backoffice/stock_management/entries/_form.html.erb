  <%= render 'shared/backoffice/default_form' do |f| %>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <%= f.label :stock, class: 'form-label' %>
    <%= f.collection_select :stock_id,
                            stocks_for_selection,
                            :id,
                            :name,
                            { prompt: t('backoffice.form.selection_prompt') },
                            class: 'form-control' %>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <%= f.label :total_items, class: 'form-label' %>
    <%= f.number_field :total_items, class: 'form-control', in: 1..10_000 %>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <%= f.label :validity, class: 'form-label' %>
    <%= f.date_field :validity, class: 'form-control', data: { 'coreui-locale': I18n.locale, 'coreui-toggle': 'date-picker' } %>
  </div>
  <%= render 'shared/backoffice/components/forms/price_form', form: f, field_for: :price %>
<% end %>
